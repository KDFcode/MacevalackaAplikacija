



@model MacevalackaAplikacija.Models.UcesnickiNalogBO

@using MacevalackaAplikacija.Controllers


@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Da li ste sigurni da zelite da ovo brisete?</h3>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            <div class="row">
                <div class="col-md-3">
                    <label class="control-label">ID ucesnika</label>

                    @Html.DisplayFor(model => model.ucesnikID)
                </div>
                <div class="col-md-3">
                    <label>Naziv:</label>
                    @Html.EditorFor(model => model.ImePrezime, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    <label>Klub:</label>
                    @Html.EditorFor(model => model.Klub, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    <label>Uloga:</label>
                    @Html.EditorFor(model => model.Uloga, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    <label>Disciplina:</label>
                    @Html.EditorFor(model => model.Disciplina.DiscNaziv, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    <label>Faza:</label>
                    @Html.EditorFor(model => model.faza.NazivFazeTakmicenja, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                </div>
                <div class="col-md-3">


                    @Html.HiddenFor(model => model.ucesnikID)

                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Obrisi" class="btn btn-default" />
            </div>

        </div>
    </div>
    <br />
    <div>
        @Html.ActionLink("Vrati se na listu", "IndexUce")
    </div>
}
<br />
